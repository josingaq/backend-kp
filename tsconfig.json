{
  "compilerOptions": {
    "rootDirs": ["./src"],
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strictNullChecks": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
